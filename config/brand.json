    "neutrals": {
      "black": {
        "hex": "#000000",
        "rgb": "0, 0, 0",
        "cmyk": "0, 0, 0, 100",
        "pantone": "Black",
        "usage": "Primary text, headings"
      },
      "grey_80": {
        "hex": "#575757",
        "rgb": "87, 87, 87",
        "cmyk": "0, 0, 0, 80",
        "usage": "Secondary text, body copy"
      },
      "grey_60": {
        "hex": "#878787",
        "rgb": "135, 135, 135",
        "cmyk": "0, 0, 0, 60",
        "usage": "Tertiary text, captions"
      },
      "grey_40": {
        "hex": "#b2b2b2",
        "rgb": "178, 178, 178",
        "cmyk": "0, 0, 0, 40",
        "usage": "Borders, dividers"
      },
      "grey_15": {
        "hex": "#e3e3e3",
        "rgb": "227, 227, 227",
        "cmyk": "0, 0, 0, 15",
        "usage": "Backgrounds, cards"
      },
      "grey_5": {
        "hex": "#f6f6f6",
        "rgb": "246, 246, 246",
        "cmyk": "0, 0, 0, 5",
