    "tagline": "Navigate your financial future",
    "owner": "Old Mutual Namibia",
    "parentBrand": "Old Mutual Corporate"
  },

  "colors": {
    "primary": {
      "heritage_green": {
        "hex": "#009677",
        "rgb": "0, 150, 119",
        "cmyk": "100, 15, 70, 0",
