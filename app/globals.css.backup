@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  :root {
    --om-green: #00a651;
    --om-navy: #003b5c;
    --om-gold: #f7b500;
    --om-grey: #8c8c8c;
    --om-light-grey: #f5f5f5;
  }

  body {
    @apply bg-base-100 text-base-content;
  }
}

@layer components {
  /* Base DaisyUI Button Styles (manual implementation) */
  .btn {
    @apply inline-flex items-center justify-center rounded-box text-center font-semibold no-underline outline-offset-2 transition-all duration-200 ease-out active:scale-[0.98] border border-transparent;
    min-height: 3rem;
    padding-left: 1rem;
    padding-right: 1rem;
    font-size: 0.875rem;
    line-height: 1.25rem;
  }

  .btn:focus-visible {
    @apply outline outline-2 outline-offset-2;
  }

  .btn-primary {
    @apply bg-primary text-primary-content border-primary;
  }

  .btn-primary:hover {
    @apply bg-primary-focus;
  }

  .btn-outline {
    @apply bg-transparent text-current border-current hover:bg-current hover:text-current-content;
  }

  .btn-lg {
    @apply min-height-12 px-6 text-lg;
  }

  /* Card Styles */
  .card {
    @apply rounded-box bg-base-100 text-base-content shadow-sm;
  }

  .card-body {
    @apply p-6;
  }

  .card-title {
    @apply text-lg font-semibold leading-tight;
  }

  /* Badge Styles */
  .badge {
    @apply inline-flex items-center justify-center rounded-badge text-xs font-semibold leading-tight px-2 py-1 min-h-5;
  }

  /* Input Styles */
  .input {
    @apply w-full text-base;
  }

  .input-bordered {
    @apply border border-base-content/20 bg-base-100 focus:border-primary focus:outline-none;
  }

  /* Old Mutual Button Styles */
  .btn-om-primary {
    @apply btn bg-om-green hover:bg-om-green/90 text-white border-none;
  }

  .btn-om-secondary {
    @apply btn bg-om-navy hover:bg-om-navy/90 text-white border-none;
  }

  .btn-om-outline {
    @apply btn btn-outline border-om-green text-om-green hover:bg-om-green hover:text-white;
  }

  /* Card Styles */
  .card-om {
    @apply card bg-base-100 shadow-lg hover:shadow-xl transition-shadow duration-300;
  }

  /* Badge Styles */
  .badge-om-active {
    @apply badge bg-om-green text-white;
  }

  .badge-om-pending {
    @apply badge bg-om-gold text-om-navy;
  }

  .badge-om-inactive {
    @apply badge bg-om-grey text-white;
  }

  /* Input Styles */
  .input-om {
    @apply input input-bordered focus:border-om-green focus:outline-none focus:ring-2 focus:ring-om-green/20;
  }

  /* Compass Animation */
  @keyframes compass-spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .compass-animate {
    animation: compass-spin 20s linear infinite;
  }

  /* Gradient Text */
  .text-gradient-om {
    @apply bg-gradient-to-r from-om-green to-om-navy bg-clip-text text-transparent;
  }
}

@layer utilities {
  .text-balance {
    text-wrap: balance;
  }
}
